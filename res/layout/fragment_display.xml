<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@layout/color_gradient"
    tools:context="com.example.timetrial.DisplayexActivity$PlaceholderFragment" >

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ListView
        android:id="@+id/listViewDB"
        android:layout_width="500dip"
        android:layout_height="120dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2" >
    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:gravity="center"
        android:text="Amount"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewDB"
        android:layout_toRightOf="@+id/textView1"
        android:gravity="center"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewDB"
        android:layout_toRightOf="@+id/textView2"
        android:gravity="center"
        android:text="Receipt No."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewDB"
        android:layout_toRightOf="@+id/textView4"
        android:gravity="center"
        android:text="Bill Image"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewDB"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/date_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/copy_rights"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_l"
        android:layout_toLeftOf="@+id/textView3"
        android:src="@drawable/add" />
    
</RelativeLayout>
</HorizontalScrollView>