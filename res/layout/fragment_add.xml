<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@layout/color_gradient"
    tools:context="com.example.timetrial.AddexActivity$PlaceholderFragment" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="426dp" >

    <requestFocus />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Date(yyyy-mm-dd)"
        android:inputType="date" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/amount"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Description" />

    <EditText
        android:id="@+id/receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/description"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Receipt No." />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/save"
        android:layout_marginRight="19dp"
        android:src="@drawable/camera" />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/receipt"
        android:layout_marginTop="36dp"
        android:src="@drawable/save" />
    
    <TextView
        android:id="@+id/date_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="@string/copy_rights"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
</RelativeLayout>    
</ScrollView>
